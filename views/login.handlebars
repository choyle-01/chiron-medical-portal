              </div>
              <!-- Submit button -->
              <div class="d-grid gap-2">
                <button type="submit" id="signupBtn" class="btn btn-warning btn-lg btn-block mb-4">
                  Sign Up
                </button>
                <button type="button" id="moreQuestions">Load more</button>
                <button type="button" class="login-btn btn btn-info btn-lg btn-block mb-4">
                  Login
                </button>
              </div>

            </form>
          </div>
        </div>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0">
        <img id='loginImg' src="https:/via.placeholder.com/500" class="w-100 rounded-4 shadow-4" alt="" />
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
