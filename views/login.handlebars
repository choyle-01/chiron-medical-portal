<!-- Section: Design Block -->
<section class="text-center text-lg-start register">

  <div class="passwordAlert alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Please Try Again</strong> Password must be at least 8 characters long.
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="generalAlert alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Please Try Again</strong> Check your credentials, if you already have an account please log in.
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <!-- Jumbotron -->
  <div class="container py-5">
    <div class="row justify-content-center align-items-center">
      <div class="col-9">
        <div class="card cascading-right" style="
              background: hsla(0, 0%, 100%, 0.55);
              backdrop-filter: blur(30px);
              ">
          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="fw-bold mb-5" id="signupText">Sign up now</h2>
            <form class="signup-form ">
              <!-- first name & last name -->
              <div id="ogQuestions">
                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <input type="text" id="first_name-signup" class="form-control" />
                      <label class="form-label" for="first_name-signup">First Name</label>
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <input type="text" id="last_name-signup" class="form-control" />
                      <label class="form-label" for="last_name-signup">Last Name</label>
                    </div>
                  </div>
                </div>

                <!-- username input -->
                <div class="form-outline mb-4">
                  <input type="text" id="username-signup" class="form-control" />
                  <label class="form-label" for="username-signup">username</label>
                </div>


                <!-- Email input -->
                <div class="form-outline mb-4">
                  <input type="email" id="email-signup" class="form-control" />
                  <label class="form-label" for="email-signup">Email</label>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                  <input type="password" id="password-signup" class="form-control" />
                  <label class="form-label" for="password-signup">Password</label>
                </div>
              </div>
              <div id="secondaryQuestions">
                <div class="form-outline mb-4">
                  <input type="text" id="sex-signup" class="form-control" />
                  <label class="form-label" for="sex-signup">Sex</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" id="age-signup" class="form-control" />
                  <label class="form-label" for="age-signup">Age</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" id="race-signup" class="form-control" />
                  <label class="form-label" for="race-signup">Race</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" id="street_address-signup" class="form-control" />
                  <label class="form-label" for="street_address-signup">Street Address</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" id="city-signup" class="form-control" />
                  <label class="form-label" for="city-signup">City</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" id="state-signup" class="form-control" />
                  <label class="form-label" for="state-signup">State</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" id="zipcode-signup" class="form-control" />
                  <label class="form-label" for="zipcode-signup">Zipcode</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" id="phone-signup" class="form-control" />
                  <label class="form-label" for="phone-signup">Phone</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" id="rx-signup" class="form-control" />
                  <label class="form-label" for="rx-signup">RX</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" id="dx-signup" class="form-control" />
                  <label class="form-label" for="dx-signup">DX</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" id="procedure-signup" class="form-control" />
                  <label class="form-label" for="procedure-signup">Procedure</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" id="insurance_name-signup" class="form-control" />
                  <label class="form-label" for="insurance_name-signup">Insurance Name</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" id="allergies-signup" class="form-control" />
                  <label class="form-label" for="allergies-signup">Allergies</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" id="illness-signup" class="form-control" />
                  <label class="form-label" for="illness-signup">Illness</label>
                </div>



  <div class="form-group">
    <label class="col-md-12 control-label" for="family_history">Do you have a family history of any of the following
      illnesses?</label>
    <div class="col-md-4">
      <br>
      <div class="checkbox">
        <label for="family_history-0">
          <input type="checkbox" name="asthma" class="history-form" id="asthma-signup" value="Asthma">
          Asthma
        </label>
      </div>
      <div class="checkbox">
        <label for="family_history-1">
          <input type="checkbox" name="cancer" class="history-form" id="cancer" value="Cancer">
          Cancer
        </label>
      </div>
      <div class="checkbox">
        <label for="family_history-2">
          <input type="checkbox" name="cardiac_disease" class="history-form" id="cardiac-disease"
            value="Cardiac Disease">
          Cardiac disease
        </label>
      </div>
      <div class="checkbox">
        <label for="family_history-3">
          <input type="checkbox" name="diabetes" class="history-form" id="diabetes" value="Diabetes">
          Diabetes
        </label>
      </div>
      <div class="checkbox">
        <label for="family_history-4">
          <input type="checkbox" name="hypertension" class="history-form" id="hypertension" value="Hypertension">
          Hypertension
        </label>
      </div>
      <div class="checkbox">
        <label for="family_history-5">
          <input type="checkbox" name="psychiatric" class="history-form" id="psychiatric" value="Psychiatric Disorder">
          Psychiatric disorder
        </label>
      </div>
      <div class="checkbox">
        <label for="family_history-6">
          <input type="checkbox" name="epilepsy" class="history-form" id="epilepsy" value="Epilepsy">
          Epilepsy
        </label>
      </div>
    </div>
  </div>





