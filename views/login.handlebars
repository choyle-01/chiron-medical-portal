                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="text" id="last-name-signup" class="form-control" />
                    <label class="form-label" for="last-name-signup">Last Name</label>
                  </div>
                </div>
              </div>
  
              <!-- username input -->
              <div class="form-outline mb-4">
                <input type="text" id="username-signup" class="form-control" />
                <label class="form-label" for="username-signup">username</label>
              </div>
  
  
