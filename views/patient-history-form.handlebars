<!-- Form Name -->

<div class="card mx-5 my-4">
  <legend class="mx-5 mt-3 ">Patient History</legend>
  <hr>
  <!-- Multiple Checkboxes -->
  <form class="family-history-form mx-5 mb-5">
    <div class="form-group">
      <label class="col-md-12 control-label" for="family_history">Do you have a family history of any of the following illnesses?</label>
      <div class="col-md-4">
        <br>
        <div class="checkbox">
          <label for="family_history-0">
            <input type="checkbox" name="asthma" class="history-form" id="asthma-signup" value="asthma">
            Asthma
          </label>
        </div>
        <div class="checkbox">
          <label for="family_history-1">
            <input type="checkbox" name="cancer" class="history-form" id="cancer" value="cancer">
            Cancer
          </label>
        </div>
        <div class="checkbox">
          <label for="family_history-2">
            <input type="checkbox" name="cardiac_disease" class="history-form" id="cardiac-disease" value="Cardiac Disease">
            Cardiac disease
          </label>
        </div>
        <div class="checkbox">
          <label for="family_history-3">
            <input type="checkbox" name="diabetes" class="history-form" id="diabetes" value="Diabetes">
            Diabetes
          </label>
        </div>
        <div class="checkbox">
          <label for="family_history-4">
            <input type="checkbox" name="hypertension" class="history-form" id="hypertension" value="Hypertension">
            Hypertension
          </label>
        </div>
        <div class="checkbox">
          <label for="family_history-5">
            <input type="checkbox" name="psychiatric" class="history-form" id="psychiatric" value="Psychiatric Disorder">
            Psychiatric disorder
          </label>
        </div>
        <div class="checkbox">
          <label for="family_history-6">
            <input type="checkbox" name="epilepsy" class="history-form" id="epilepsy" value="Epilepsy">
            Epilepsy
          </label>
        </div>
      </div>
    </div>
      <button type="submit" class="btn btn-outline-secondary btn-block">Submit</button>
    <br>
  </form>
</div>

<script src="./js/patient-history-form.js"></script>